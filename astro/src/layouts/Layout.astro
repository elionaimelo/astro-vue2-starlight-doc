---
// @ts-ignore
import Counter from "../components/Counter.vue";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <main>
      <Counter defaultValue={10} client:visible/>
    </main>
  </body>
</html>
